@model WebApplication2.Models.form1


@using (Html.BeginForm("Update", "My", FormMethod.Post))
{
    <table>
        <tr>
            <th>ID</th>
            <td>@Html.TextBoxFor(N => N.id)</td>
        </tr>
        <tr>
            <th>NAME</th>
            <td>@Html.TextBoxFor(N => N.name)</td>
        </tr>
        <tr>
            <th>AGE</th>
            <td>@Html.TextBoxFor(N => N.age)</td>
        </tr>
        <tr>
            <th>MAIL ID</th>
            <td>@Html.TextBoxFor(N => N.mailid)</td>
        </tr>
        <tr>
            <th>COURSE</th>
            <td>@Html.TextBoxFor(N => N.course)</td>
        </tr>
        <tr>
            <td colspan="2"><center><input type="submit" value="Update" /></center></td>
        </tr>
    </table>
}
